DLSafeRule(Annotation(rdfs:comment "This is to determine semantically related terms between bottom-up ontologies."^^xsd:string)
	Annotation(rdfs:label "S1"^^xsd:string)
	Body(
		ClassAtom(star:TopDownTerm Variable(:t)) 
		ObjectPropertyAtom(star:hasOntologicalOrientation Variable(:t) star:topDown:ontology) 
		ClassAtom(star:BottomUpTerm Variable(:b1)) 
		ObjectPropertyAtom(star:hasOntologicalOrientation Variable(:b1) star:bottomUp:ontology) 
		ObjectPropertyAtom(star:sigmaRepresents Variable(:b1) Variable(:t)) 
		ClassAtom(star:BottomUpTerm Variable(:b2)) 
		ObjectPropertyAtom(star:hasOntologicalOrientation Variable(:b2) star:bottomUp:ontology) 
		ObjectPropertyAtom(star:sigmaRepresents Variable(:b2) Variable(:t))
	)
	Head(ObjectPropertyAtom(star:isSemanticallyRelatedTo Variable(:b1) Variable(:b2)))
)

DLSafeRule(Annotation(rdfs:comment "This is to determine semantically related terms between top-down ontologies."^^xsd:string)
	Annotation(rdfs:label "S2"^^xsd:string)
	Body(
		ClassAtom(star:TopDownTerm Variable(:t1)) 
		ObjectPropertyAtom(star:hasOntologicalOrientation Variable(:t1) star:topDown:ontology) 
		ClassAtom(star:TopDownTerm Variable(:t2)) 
		ObjectPropertyAtom(star:hasOntologicalOrientation Variable(:t2) star:topDown:ontology) 
		ClassAtom(star:BottomUpTerm Variable(:b)) 
		ObjectPropertyAtom(star:hasOntologicalOrientation Variable(:b) star:bottomUp:ontology) 
		ObjectPropertyAtom(star:sigmaRepresents Variable(:b) Variable(:t1)) 
		ObjectPropertyAtom(star:sigmaRepresents Variable(:b) Variable(:t2))
	)
	Head(ObjectPropertyAtom(star:isSemanticallyRelatedTo Variable(:t1) Variable(:t2)))
)
